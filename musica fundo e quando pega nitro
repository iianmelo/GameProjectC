//inicialização
InitAudioDevice();
Music MusicaFundo = LoadMusicStream("");
    Music MusicaNitro = LoadMusicStream("");
    PlayMusicStream(MusicaFundo);
    PlayMusicStream(MusicaNitro);
bool pause = false;
//
//
 loop principal na area de update:
UpdateMusicStream(MusicaFundo); 
//
//
dentro do if do nitro em ambos os carros coloca:
PauseMusicStream(MusicaFundo);
UpdateMusicStream(MusicaNitro);
//
//
fora do if do nitro:
ResumeMusicStream(MusicaFundo);
//
//
parte final(De-Initialization):
UnloadMusicStream(MusicaFundo); 
UnloadMusicStream(MusicaNitro);
CloseAudioDevice();
//
